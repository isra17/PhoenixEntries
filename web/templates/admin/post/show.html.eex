<h2>Show post</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @post.title %>
  </li>

  <li>
    <strong>Content:</strong>
    <%= @post.content %>
  </li>

  <li>
    <strong>Published at:</strong>
    <%= @post.published_at %>
  </li>

</ul>

<%= link "Edit", to: admin_post_path(@conn, :edit, @post) %>
<%= link "Back", to: admin_post_path(@conn, :index) %>
